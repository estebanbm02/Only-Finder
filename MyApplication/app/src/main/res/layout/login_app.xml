<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:backgroundTint="#F2F2F2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAcceder"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#348E91"
        android:text="Acceder"
        android:textColorHighlight="#348E91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPassword"
        app:rippleColor="#348E91"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonRegistrarse"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#348E91"
        android:text="Registrarse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAcceder"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textEmailAddress"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="216dp"
        android:background="#9C27B0"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Email*"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="#673AB7"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Password*"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmailAddress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:text="Al continuar, tambien aceptas los Terminos de servicio y politica de privacidad"
        android:textAlignment="center"
        android:textColor="#CACACA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistrarse" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        android:text="Acceder como usuario"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Introduzca sus credenciales para iniciar sesion"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar2"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#348E91"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-11dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="Acceder"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#348E91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menor2" />

</androidx.constraintlayout.widget.ConstraintLayout>